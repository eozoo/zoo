                                    <artifactId>p3c-pmd</artifactId>
                                </exclude>
                            </excludes>
                            <includeSystemScope>true</includeSystemScope>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>sh-prepare</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <failOnError>true</failOnError>
                                    <target>
                                        <exec executable="bash" dir="${project.build.directory}">
                                            <arg value="${project.build.directory}/ant.sh"/>
                                            <arg value="prepare"/>
                                            <arg value="tar"/>
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>sh-build</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <failOnError>true</failOnError>
                                    <target>
                                        <exec executable="bash" dir="${project.build.directory}">
                                            <arg value="${project.build.directory}/ant.sh"/>
                                            <arg value="tar"/>
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
